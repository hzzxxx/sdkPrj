<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="OvalImageView">
        <attr name="OvalRadiusTopLeft" format="dimension"/>
        <attr name="OvalRadiusTopRight" format="dimension"/>
        <attr name="OvalRadiusBotoomLeft" format="dimension"/>
        <attr name="OvalRadiusBotoomRight" format="dimension"/>
        <attr name="OvalRadius" format="dimension"/>
    </declare-styleable>

    <!--支持圆角的ShapeView-->
    <declare-styleable name="ShapeView">
        <attr name="svBgColor" format="color" />
        <attr name="svBgDrawable" format="reference" />
        <attr name="svBorderWidth" format="dimension" />
        <attr name="svBorderColor" format="color" />
        <attr name="svRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DrawableTextView">
        <attr name="start_drawable" format="reference" />
        <attr name="end_drawable" format="reference" />
        <attr name="top_drawable" format="reference" />
        <attr name="bottom_drawable" format="reference" />

        <attr name="drawable_width" format="dimension" />
        <attr name="drawable_height" format="dimension" />

        <attr name="startdrawable_width" format="dimension" />
        <attr name="startdrawable_height" format="dimension" />

        <attr name="enddrawable_width" format="dimension" />
        <attr name="enddrawable_height" format="dimension" />

        <attr name="topdrawable_width" format="dimension" />
        <attr name="topdrawable_height" format="dimension" />

        <attr name="bottomdrawable_width" format="dimension" />
        <attr name="bottomdrawable_height" format="dimension" />
    </declare-styleable>

    <!--渐变GradientTextView-->
    <declare-styleable name="GradientTextView">
        <attr name="startColor" format="color" />
        <attr name="endColor" format="color" />
        <attr name="gradientDirection">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="topText" format="string" />
        <attr name="bottomText" format="string" />
    </declare-styleable>
</resources>